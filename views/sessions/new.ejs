<h2>Login</h2>

<% if (session.borrada==true ) { %>
<i>  Su sesión se ha desconectado automáticamente. </i><p>
<% session.borrada = false %>
<% } %>

<form method='POST' action='/login'>

  <div class="field">
    <label for="login">Login:</label><br />
    <input type="text" id="login" name="login" size="30" autocomplete="off" required />
  </div>

  <div class="field">
    <label for="password">Password:</label><br />
    <input type="password" id="password" name="password" size="30" autocomplete="off" required />
  </div>

  <div class="actions">
    <input name="commit" type="submit" value="Login" />
  </div>

</form>
